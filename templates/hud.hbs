
<div id="{{id}}" class="{{style}}" style="transform: scale({{scale}}); transform-origin: top left;">
{{~#if hud.actorId~}}
{{~#if hud.title~}}
<div id="tah-character-name" data-part="characterName">{{hud.title}}</div>
{{~/if~}}
<div id="tah-collapse-expand">
    <button id="tah-collapse-hud" data-tooltip="{{localize "tokenActionHud.collapseHud"}}" data-part="collapseHudButton" data-action="collapseHud">
        <i class="fas fa-caret-left"></i>
    </button>
    <button id="tah-expand-hud" class="tah-hidden" data-tooltip="{{localize "tokenActionHud.expandHud"}}" data-part="expandHudButton" data-action="expandHud">
        <i class="fas fa-caret-right"></i>
    </button>
</div>
<div class="tah-groups" data-part="groups">
    {{#each hud.groups}}
    {{>"modules/token-action-hud-core/templates/group.hbs" background=../background}}
    {{/each}}
</div>
{{#unless hovering}}
<div id="tah-buttons" data-part="buttons">
    <button id="tah-unlock" data-part="unlockHudButton" data-action="unlockHud" data-tooltip="{{localize "tokenActionHud.unlockHud"}}">
        <i class="fa fa-lock"></i>
    </button>
    <button id="tah-lock" class="tah-hidden" data-part="lockHudButton" data-action="lockHud" data-tooltip="{{localize "tokenActionHud.lockHud"}}">
        <i class="fa fa-lock-open"></i>
    </button>
    <button id="tah-edit-hud" class="tah-hidden" data-part="editHudButton" data-action="editHud" data-tooltip="{{localize "tokenActionHud.editHud"}}">
        <i class="fa fa-pen-to-square"></i>
    </button>
</div>
{{/unless}}
{{~/if~}}
</div>
