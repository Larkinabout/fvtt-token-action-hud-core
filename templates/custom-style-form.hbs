                <div class="form-fields">
                    <input type="text" id="textSecondaryColor" name="textSecondaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{textSecondaryColor}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.textTertiaryColor.label"}}</label>
                <div class="form-fields">
                    <input type="text" id="textTertiaryColor" name="textTertiaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{textTertiaryColor}}">
                </div>
            </div>
            <fieldset>
                <legend>
                    <span>{{localize "tokenActionHud.settings.customStyle.form.hovered"}}</span>
                </legend>
                <div class="form-group">
                    <label>{{localize "tokenActionHud.settings.customStyle.form.textHoverPrimaryColor.label"}}</label>
                    <div class="form-fields">
