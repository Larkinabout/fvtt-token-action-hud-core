                </label>
                <div class="form-fields">
                    <input type="number" name="buttonHeight" value="{{buttonHeight}}" />
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.buttonBackgroundColor.label"}}</label>
                <div class="form-fields">
                    <input type="text" id="buttonBackgroundColor" name="buttonBackgroundColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonBackgroundColor}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.buttonBorderPrimaryColor.label"}}</label>
                <div class="form-fields">
                    <input type="text" id="buttonBorderPrimaryColor" name="buttonBorderPrimaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonBorderPrimaryColor}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.buttonBorderSecondaryColor.label"}}</label>
                <div class="form-fields">
                    <input type="text" id="buttonBorderSecondaryColor" name="buttonBorderSecondaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonBorderSecondaryColor}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.buttonTextColor.label"}}</label>
                <div class="form-fields">
                    <input type="text" id="buttonTextColor" name="buttonTextColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonTextColor}}">
                </div>
            </div>
            <fieldset>
                <legend>
                    <span>{{localize "tokenActionHud.settings.customStyle.form.hovered"}}</span>
                </legend>
                <div class="form-group">
                    <label>{{localize "tokenActionHud.settings.customStyle.form.buttonHoverBackgroundColor.label"}}</label>
                    <div class="form-fields">
                        <input type="text" id="buttonHoverBackgroundColor" name="buttonHoverBackgroundColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonHoverBackgroundColor}}">
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "tokenActionHud.settings.customStyle.form.buttonHoverBorderPrimaryColor.label"}}</label>
                    <div class="form-fields">
                        <input type="text" id="buttonHoverBorderPrimaryColor" name="buttonHoverBorderPrimaryColor"data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonHoverBorderPrimaryColor}}" >
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "tokenActionHud.settings.customStyle.form.buttonHoverBorderSecondaryColor.label"}}</label>
                    <div class="form-fields">
                        <input type="text" id="buttonHoverBorderSecondaryColor" name="buttonHoverBorderSecondaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonHoverBorderSecondaryColor}}">
                    </div>
                </div>
                <div class="form-group">
                    <label>{{localize "tokenActionHud.settings.customStyle.form.buttonHoverTextColor.label"}}</label>
                    <div class="form-fields">
                        <input type="text" id="buttonHoverTextColor" name="buttonHoverTextColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonHoverTextColor}}">
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>
                    <span>{{localize "tokenActionHud.settings.customStyle.form.toggleable"}}</span>
                </legend>
                <fieldset>
                    <legend>
                        <span>{{localize "tokenActionHud.settings.customStyle.form.active"}}</span>
                    </legend>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleActiveBackgroundColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleActiveBackgroundColor" name="buttonToggleActiveBackgroundColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleActiveBackgroundColor}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleActiveBorderPrimaryColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleActiveBorderPrimaryColor" name="buttonToggleActiveBorderPrimaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleActiveBorderPrimaryColor}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleActiveBorderSecondaryColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleActiveBorderSecondaryColor" name="buttonToggleActiveBorderSecondaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleActiveBorderSecondaryColor}}">
