                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleHoverBorderSecondaryColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleHoverBorderSecondaryColor" name="buttonToggleHoverBorderSecondaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleHoverBorderSecondaryColor}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleHoverTextColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleHoverTextColor" name="buttonToggleHoverTextColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleHoverTextColor}}">
