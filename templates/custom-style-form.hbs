                    </div>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleActiveTextColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleActiveTextColor" name="buttonToggleActiveTextColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleActiveTextColor}}">
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>
                        <span>{{localize "tokenActionHud.settings.customStyle.form.hovered"}}</span>
                    </legend>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleHoverBackgroundColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleHovereBackgroundColor" name="buttonToggleHoverBackgroundColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleHoverBackgroundColor}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{localize "tokenActionHud.settings.customStyle.form.buttonToggleHoverBorderPrimaryColor.label"}}</label>
                        <div class="form-fields">
                            <input type="text" id="buttonToggleHoverBorderPrimaryColor" name="buttonToggleHoverBorderPrimaryColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{buttonToggleHoverBorderPrimaryColor}}">
