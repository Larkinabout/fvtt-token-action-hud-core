            </fieldset>
        </fieldset>
        <fieldset>
            <legend>
                <span>{{localize "tokenActionHud.settings.customStyle.form.text"}}</span>
            </legend>
            <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.textPrimaryColor.label"}}</label>
