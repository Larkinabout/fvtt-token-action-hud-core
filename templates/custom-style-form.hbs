<div id="token-action-hud-form" class="standard-form">
    <div class="standard-form scrollable">
        <div class="form-group">
                <label>{{localize "tokenActionHud.settings.customStyle.form.backgroundColor.label"}}</label>
                <div class="form-fields">
                    <input type="text" id="backgroundColor" name="backgroundColor" data-color-picker="{required: false, alphaChannel:true, format:'hexa'}" value="{{backgroundColor}}">
                </div>
            </div>
        <fieldset>
            <legend>
                <span>{{localize "tokenActionHud.settings.customStyle.form.buttons"}}</span>
            </legend>
            <div class="form-group">
                <label>
                    {{localize "tokenActionHud.settings.customStyle.form.buttonHeight.label"}}
