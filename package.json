    "@yaireo/dragsort": "^1.3.2",
    "@yaireo/tagify": "^4.31.3",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^50.2.4",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.0",
    "less": "^4.2.0",
    "rollup": "^3.26.3"
